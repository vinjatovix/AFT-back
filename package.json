{
  "name": "aft",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node  .",
    "test": "jest -c jest.config.js --forceExit",
    "test:coverage": "jest -c jest.config.js --coverage --forceExit",
    "docker": "docker-compose -f ./mongodb/docker-compose.yml up --build -d",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commit-message-validator",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint -- --max-warnings=0 && npm run test:coverage"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^\\[AFT-[\\d]+\\]\\s.*$",
      "errorMessage": "Invalid commit message. Valid example: [AFT-123] Fix typo"
    }
  },
  "devDependencies": {
    "commit-message-validator": "^1.0.2",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.3.4",
    "supertest": "^6.2.2"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-json": "^2.0.2",
    "mongoose": "^6.2.3",
    "mongoose-schema-jsonschema": "^2.0.2"
  }
}
